/* pages/home/home.wxss */

.container-all {
  background: #f5f5f5;
}

.swiper {
  height: 320rpx;
  width: 100%;
}

.swiper-box {
  overflow-x: hidden;
}

.banner-item {
  height: 100%;
  width: 100%;
}

.banner-item image {
  height: 100%;
  width: 100%;
}

.main-container {
  margin-top: 20rpx;
  flex-direction: row;
  display: -webkit-flex;
  display: flex;
  align-items: center;
}

.main-container-item {
  flex: 1;
  background-color: #fff;
}

.big-item {
  display: -webkit-box;
  -webkit-box-orient: horizontal;
  -webkit-box-pack: center;
  -webkit-box-align: center;
  border-right: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  height: 346.5rpx;
}

.samll-item {
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  height: 230rpx;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
}

.info-text {
  font-size: 34rpx;
  margin: 10rpx 20rpx;
}

.bottom-text {
  color: #ccc;
  font-size: 28rpx;
  text-align: center;
  padding: 72rpx 0;
}

.products-image {
  height: 80rpx;
  width: 80rpx;
  flex-wrap: wrap;
}

.products-item-bottom {
  text-align: center;
  color: #333;
}
