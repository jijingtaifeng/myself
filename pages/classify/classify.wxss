/* pages/classify/classify.wxss */

.classify-box {
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
}

.classify-item {
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-right: 1px solid #e8e8e8;
  border-bottom: 1px solid #e8e8e8;
  min-height: 248rpx;
  width: 49.2%;
  text-align: center;
}

.classify-item image {
  height: 80rpx;
  width: 80rpx;
  margin-bottom: 20rpx;
}
.classify-item text {
  font-size: 34rpx;
  color: #333;
}
