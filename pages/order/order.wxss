.order-box {
  background-color: white;
}

.order-status {
  line-height: 80rpx;
  display: flex;
  height: 80rpx;
  flex-direction: row;
  justify-content: space-between;
  margin-left: 30rpx;
  border-bottom: solid 1rpx #e8e8e8;
}

.order-time {
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
}

.time-icon {
  width: 28rpx;
  height: 28rpx;
  padding: 0;
  margin: auto;
  margin-right: 10rpx;
}

.order-status .status {
  color: #f53;
  margin-right: 30rpx;
  font-size: 28rpx;
}

.goods-list {
  padding: 36rpx 0rpx;
  margin: 0rpx 0rpx 0rpx 30rpx;
  font-size: 34rpx;
  color: #333;
  border-bottom: solid 1rpx #e8e8e8;
}

.order-opr {
  background-color: #fff;
  font-size: 30rpx;
  color: #333;
  height: 108rpx;
  margin-bottom: 20rpx;
}

.check-detail {
  font-size: 28rpx;
  color: #999;
  line-height: 108rpx;
  margin-left: 30rpx;
  position: relative;
}                                                                                                                                                                                                                                                                                                                                          

.check-detail::after {
  content: " ";
  height: 15rpx;
  width: 15rpx;
  border-width: 1px 1px 0 0;
  border-color: #999;
  border-style: solid;
  transform: rotate(45deg);
  position: absolute;
  margin-top: -6rpx;
  margin-left: 17rpx;
  top: 50%;
}

.cancel-order {
  padding: 9rpx 10rpx;
  border-radius: 8rpx;
  border: solid 1rpx #979797;
  margin: 24rpx 10rpx;
  position: absolute;
  right: 200rpx;
}

.modfiy-order {
  position: absolute;
  right: 30rpx;
  border: solid 1rpx #f53;
  color: #f53;
}
