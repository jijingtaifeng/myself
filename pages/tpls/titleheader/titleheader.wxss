.order-status {
  line-height: 80rpx;
  display: flex;
  height: 80rpx;
  flex-direction: row;
  justify-content: space-between;
  margin-left: 30rpx;
  border-bottom: solid 1rpx #e8e8e8;
}

.order-time {
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
}

.time-icon {
  width: 28rpx;
  height: 28rpx;
  padding: 0;
  margin: auto;
  margin-right: 10rpx;
}

.order-status .status {
  color: #f53;
  margin-right: 30rpx;
  font-size: 28rpx;
}

