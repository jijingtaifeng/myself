  height: 50px;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid #e8e8e8;
}

.item-label2 {
  font-size: 14px;
  color: black;
  padding: 0 10px;
  line-height: 50px;
}

.selected {
  padding: 10px;
}

.btn-block {
  color: #fff;
  font-size: 36rpx;
  background-color: #ccc;
}

.location {
  position: absolute;
  right: 0;
  width: 60rpx;
  height: 60rpx;
  padding: 20rpx;
  z-index: 100;
}
