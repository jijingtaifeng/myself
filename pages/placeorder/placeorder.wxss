/* pages/placeorder/placeorder.wxss */


.address {
  padding: 0 0 0 30rpx;
}

.address-box {
  height: 80rpx;
  display: -webkit-flex;
  align-items: center;
  border-bottom: solid 1rpx #e8e8e8;
}

.recycle-address {
  font-size: 32rpx;
  color: #333;
}

.modfiy-address {
  font-size: 30rpx;
  color: #999;
  position: absolute;
  right: 58rpx;
}

.address-info {
  margin: 30rpx 0;
}

.address-info text {
  font-size: 34rpx;
  color: #333;
}

.tel {
  margin-left: 16rpx;
}

.detail-address {
  font-size: 30rpx;
  color: #333;
  margin-top: 10rpx;
}

.recycle-info {
  height: 80rpx;
  font-size: 32rpx;
  margin: 0 0 0 30rpx;
  display: -webkit-flex;
  align-items: center;
  border-bottom: solid 1rpx #e8e8e8;
}

.weight-text {
  color: #333;
  font-size: 30rpx;
  margin: 30rpx;
}

.weight-box {
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin: 15rpx;
}

.weight-item {
  margin: 15rpx;
  text-align: center;
  border: solid 1rpx #999;
  height: 80rpx;
  width: 325rpx;
  line-height: 80rpx;
}

.weight-itemed {
  background-color: #f5f5f5;
  margin: 15rpx;
  text-align: center;

  height: 80rpx;
  width: 325rpx;
   font-weight: 500;
  line-height: 80rpx;
}

.recycler-box {
  line-height: 100rpx;
  height: 100rpx;
  padding: 0 0 0 30rpx;
  font-size: 32rpx;
  color: #333;
}

.recycler-info {
  margin-left: 16rpx;
}

.bottom-box {
  display: flex;
  background-color: #f5f5f5;
  justify-content: center;
}

.bt-place-order {
  line-height: 90rpx;
  text-align: center;
  width: 670rpx;
  height: 90rpx;
  border-radius: 50px;
  background-color: #f53;
  margin: 100rpx 0;
  color: #fff;
  font-size: 36rpx;
}
