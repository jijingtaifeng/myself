.money-box {
  height: 292rpx;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin: 0 20rpx;
  border-bottom: solid 0.1px #fff;
}

.money {
  font-size: 80rpx;
  font-weight: 500;
  color: #333;
  margin: 10rpx 0rpx;
}

.money::before {
  content: "Â¥";
  font-size: 60rpx;
  font-weight: 500;
  color: #333;
  margin: 10rpx 0rpx;
}

.curr-money {
  padding: 3rpx 10rpx;
  font-size: 28rpx;
  color: #999;
}

.item-box {
  height: 160rpx;
  border-bottom: solid 0.5px #e8e8e8;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  padding: 0 20rpx 0 30rpx;
}

.tx-box {
  flex-direction: column;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
}

.tx-to-wx {
  font-size: 34rpx;
  color: #333;
}

.tx-time {
  font-size: 30rpx;
  color: #999;
  margin-top: 10rpx;
}

.opr-status {
  line-height: 160rpx;
  font-size: 34rpx;
  color: #f53;
  position: absolute;
  right: 220rpx;
}

.money-index {
  line-height: 160rpx;
  font-size: 40rpx;
  color: #333;
  font-weight: 500;
  position: absolute;
  right: 40rpx;
}
